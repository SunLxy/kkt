{
  "lerna": "3.19.0",
  "version": "5.4.3",
  "packages": [
    "packages/*",
    "example/*"
  ],
  "command": {
    "create": {
      "homepage": "https://github.com/kktjs/kkt-next",
      "license": "MIT"
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "noChangelog": true,
      "exact": true,
      "forcePublish": true,
      "message": "chore(release): %s"
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock", "--no-ci"],
      "yarnClientArgs": ["--no-package-lock", "--no-ci"],
      "forceLocal": true
    }
  }
}
