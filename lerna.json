{
  "version": "6.7.0",
  "packages": ["core", "example/*", "packages/*"],
  "command": {
    "create": {
      "homepage": "https://github.com/kktjs/kkt",
      "license": "MIT"
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "exact": true,
      "forcePublish": true,
      "message": "chore(release): %s"
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"],
      "yarnClientArgs": ["--no-yarn-lock"],
      "forceLocal": true
    },
    "publish": {
      "ignorePrepublish": true
    }
  }
}
