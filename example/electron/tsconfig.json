{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "outDir": "lib",
    "rootDir": ".",
    "strict": true, /* Enable all strict type-checking options. */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "preserveSymlinks":true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist"
  ]
}